prefix=/local32/dst/libcurl
exec_prefix=${prefix}
includedir=${prefix}/include
cppflag_curl_staticlib=

usage()
{
    cat <<EOF
Usage: curl-config [OPTION]

Available values for OPTION include:

  --built-shared says 'yes' if libcurl was built shared
  --ca        ca bundle install path
  --cc        compiler
  --cflags    pre-processor and compiler flags
  --checkfor [version] check for (lib)curl of the specified version
  --configure the arguments given to configure when building curl
  --features  newline separated list of enabled features
  --help      display this help and exit
  --libs      library linking information
  --prefix    curl install prefix
  --protocols newline separated list of enabled protocols
  --static-libs static libcurl library linking information
  --version   output version information
  --vernum    output the version information as a number (hexadecimal)
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    # this deals with options in the style
    # --option=value and extracts the value part
    # [not currently used]
    -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) value= ;;
    esac

    case "$1" in
    --built-shared)
        echo yes
        ;;

    --ca)
        echo 
        ;;

    --cc)
        echo "gcc"
        ;;

    --prefix)
        echo "$prefix"
        ;;

    --feature|--features)
        for feature in SSL libz NTLM TLS-SRP HTTPS-proxy ""; do
            test -n "$feature" && echo "$feature"
        done
        ;;

    --protocols)
        for protocol in DICT FILE FTP FTPS GOPHER HTTP HTTPS IMAP IMAPS LDAP LDAPS POP3 POP3S RTSP SCP SFTP SMB SMBS SMTP SMTPS TELNET TFTP; do
            echo "$protocol"
        done
        ;;

    --version)
        echo libcurl 7.53.1
        exit 0
        ;;

    --checkfor)
        checkfor=$2
        cmajor=`echo $checkfor | cut -d. -f1`
        cminor=`echo $checkfor | cut -d. -f2`
        # when extracting the patch part we strip off everything after a
        # dash as that's used for things like version 1.2.3-CVS
        cpatch=`echo $checkfor | cut -d. -f3 | cut -d- -f1`
        checknum=`echo "$cmajor*256*256 + $cminor*256 + ${cpatch:-0}" | bc`
        numuppercase=`echo 073501 | tr 'a-f' 'A-F'`
        nownum=`echo "obase=10; ibase=16; $numuppercase" | bc`

        if test "$nownum" -ge "$checknum"; then
          # silent success
          exit 0
        else
          echo "requested version $checkfor is newer than existing 7.53.1"
          exit 1
        fi
        ;;

    --vernum)
        echo 073501
        exit 0
        ;;

    --help)
        usage 0
        ;;

    --cflags)
        if test "X$cppflag_curl_staticlib" = "X-DCURL_STATICLIB"; then
          CPPFLAG_CURL_STATICLIB="-DCURL_STATICLIB "
        else
          CPPFLAG_CURL_STATICLIB=""
        fi
        if test "X${prefix}/include" = "X/usr/include"; then
          echo "$CPPFLAG_CURL_STATICLIB"
        else
          echo "${CPPFLAG_CURL_STATICLIB}-I${prefix}/include"
        fi
        ;;

    --libs)
        if test "X${exec_prefix}/lib" != "X/usr/lib" -a "X${exec_prefix}/lib" != "X/usr/lib64"; then
           CURLLIBDIR="-L${exec_prefix}/lib "
        else
           CURLLIBDIR=""
        fi
        if test "Xyes" = "Xyes"; then
          echo ${CURLLIBDIR}-lcurl -lssh2 -lssl -lcrypto -lgdi32 -lwldap32 -lz -lws2_32
        else
          echo ${CURLLIBDIR}-lcurl
        fi
        ;;

    --static-libs)
        if test "Xyes" != "Xno" ; then
          echo ${exec_prefix}/lib/libcurl.a -L/local32/dst/libcurl/lib -L/local32/dst/libssh2/lib -L/local32/dst/openssl/lib -L/local32/dst/pixman/lib -L/local32/dst/sqlite3/lib -L/local32/dst/yafaray/lib -L/local32/dst/glib/lib -L/local32/dst/libusbx/lib -L/local32/dst/boost/lib -L/local32/dst/im-q16/lib -L/local32/dst/im-q8/lib -L/local32/dst/gm-q16/lib -L/local32/dst/gm-q8/lib -L/local32/dst/glib/lib -L/local32/dst/gettext/lib -L/local32/dst/pkg-config/lib -L/local32/dst/libffi/lib -L/local32/dst/libusbx/lib -L/local32/dst/opencv/lib -L/local32/dst/qt/lib -L/local32/dst/botan/lib -L/local32/dst/fftw/lib -L/local32/dst/lcms2/lib -L/local32/dst/freetype2/lib -L/local32/dst/libtiff/lib -L/local32/dst/libjpeg/lib -L/local32/dst/libpng/lib -L/local32/dst/libxml2/lib -L/local32/dst/libtool/lib -L/local32/dst/bzip2/lib -L/local32/dst/zlib/lib -L/local32/dst/libiconv/lib -L/local32/lib -lpthread -mthreads -lssh2 -lssl -lcrypto -lgdi32 -lwldap32 -lz -lws2_32
        else
          echo "curl was built with static libraries disabled" >&2
          exit 1
        fi
        ;;

    --configure)
        echo " '--prefix=/local32/dst/libcurl' 'CFLAGS=-I/local32/dst/libcurl/include -I/local32/dst/libssh2/include -I/local32/dst/openssl/include -I/local32/dst/pixman/include -I/local32/dst/sqlite3/include -I/local32/dst/yafaray/include -I/local32/dst/glib/include -I/local32/dst/libusbx/include -I/local32/dst/boost/include -I/local32/dst/im-q16/include -I/local32/dst/im-q8/include -I/local32/dst/gm-q16/include -I/local32/dst/gm-q8/include -I/local32/dst/glib/include -I/local32/dst/gettext/include -I/local32/dst/pkg-config/include -I/local32/dst/libffi/include -I/local32/dst/libusbx/include -I/local32/dst/opencv/include -I/local32/dst/qt/include -I/local32/dst/botan/include -I/local32/dst/fftw/include -I/local32/dst/lcms2/include -I/local32/dst/freetype2/include -I/local32/dst/libtiff/include -I/local32/dst/libjpeg/include -I/local32/dst/libpng/include -I/local32/dst/libxml2/include -I/local32/dst/libtool/include -I/local32/dst/bzip2/include -I/local32/dst/zlib/include -I/local32/dst/libiconv/include -I/local32/include -mms-bitfields -mthreads -mtune=pentium3' 'LDFLAGS=-L/local32/dst/libcurl/lib -L/local32/dst/libssh2/lib -L/local32/dst/openssl/lib -L/local32/dst/pixman/lib -L/local32/dst/sqlite3/lib -L/local32/dst/yafaray/lib -L/local32/dst/glib/lib -L/local32/dst/libusbx/lib -L/local32/dst/boost/lib -L/local32/dst/im-q16/lib -L/local32/dst/im-q8/lib -L/local32/dst/gm-q16/lib -L/local32/dst/gm-q8/lib -L/local32/dst/glib/lib -L/local32/dst/gettext/lib -L/local32/dst/pkg-config/lib -L/local32/dst/libffi/lib -L/local32/dst/libusbx/lib -L/local32/dst/opencv/lib -L/local32/dst/qt/lib -L/local32/dst/botan/lib -L/local32/dst/fftw/lib -L/local32/dst/lcms2/lib -L/local32/dst/freetype2/lib -L/local32/dst/libtiff/lib -L/local32/dst/libjpeg/lib -L/local32/dst/libpng/lib -L/local32/dst/libxml2/lib -L/local32/dst/libtool/lib -L/local32/dst/bzip2/lib -L/local32/dst/zlib/lib -L/local32/dst/libiconv/lib -L/local32/lib -lpthread -mthreads' 'CPPFLAGS=-I/local32/dst/libcurl/include -I/local32/dst/libssh2/include -I/local32/dst/openssl/include -I/local32/dst/pixman/include -I/local32/dst/sqlite3/include -I/local32/dst/yafaray/include -I/local32/dst/glib/include -I/local32/dst/libusbx/include -I/local32/dst/boost/include -I/local32/dst/im-q16/include -I/local32/dst/im-q8/include -I/local32/dst/gm-q16/include -I/local32/dst/gm-q8/include -I/local32/dst/glib/include -I/local32/dst/gettext/include -I/local32/dst/pkg-config/include -I/local32/dst/libffi/include -I/local32/dst/libusbx/include -I/local32/dst/opencv/include -I/local32/dst/qt/include -I/local32/dst/botan/include -I/local32/dst/fftw/include -I/local32/dst/lcms2/include -I/local32/dst/freetype2/include -I/local32/dst/libtiff/include -I/local32/dst/libjpeg/include -I/local32/dst/libpng/include -I/local32/dst/libxml2/include -I/local32/dst/libtool/include -I/local32/dst/bzip2/include -I/local32/dst/zlib/include -I/local32/dst/libiconv/include -I/local32/include'"
        ;;

    *)
        echo "unknown option: $1"
        usage 1
        ;;
    esac
    shift
done

exit 0
